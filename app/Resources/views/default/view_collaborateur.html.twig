{% extends 'base.html.twig' %}

{% block content %}
<style>
 
.alert.alert-styled-left {
    border-left-width: 27px !important;
}
.alert[class*=alert-styled-].alert-info:after, .alert[class*=alert-styled-][class*=bg-info]:after
{
content: none !important;
}

</style>
<div class="page-content">
 {% block sidebar %}
        {% include 'layout/_partials/sidebar.html.twig' %}
    {% endblock %}
    <div class="content-wrapper">
        <div class="content">
            <div class="panel panel-flat ">
                    <div class="panel-heading">
                        <h6 class="panel-title">Gestion des collaborateurs<a class="heading-elements-toggle"><i class="icon-more"></i></a><a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
                       <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                                <li><a data-action="close"></a></li>
                            </ul>
                        </div>
                    </div>
                <div class="panel-body">
                    <legend class="text-semibold"><i class="icon-address-book"></i> Informations générale</legend>
                    <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Nom</th>
                                        <td>{{ employer.firstName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Prénom</th>
                                        <td>{{ employer.lastName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Adresse</th>
                                        <td>{{ employer.lastName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Téléphone</th>
                                        <td>{{ employer.phoneNumber }}</td>
                                    </tr>
                                    <tr>
                                        <th>Initiales</th>
                                        <td>{{ employer.userAccount.initials }}</td>
                                    </tr>
                        
                                    <tr>
                                        <th>Login </th>
                                        <td>{{ employer.userAccount.username }}</td>
                                    </tr>
                                    <tr>
                                        <th>Adresse e-mail</th>
                                        <td>{{ employer.userAccount.email }}</td>
                                    </tr>
                                    
                                    <tr>
                                        <th>Date de création</th>
                                        <td>1983-01-23 09:00:52</td>
                                    </tr>
                                    <tr>
                                        <th>Dernière modification</th>
                                        <td>2017-12-05 11:06:28</td>
                                    </tr>
                                    <tr>
                                        <th>Dernière connexion</th>
                                        <td>2017-12-05 11:06:28</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                       
                </div>
                <div class="panel-footer"><a class="heading-elements-toggle"><i class="icon-more"></i></a>
                    <div class="heading-elements pull-right">
                        <div class="col-md-12">
                            <div class="text-right">
                                <div class="btn-group">
                                    <a class="btn btn-primary legitRipple" href="{{ path('edit-collaborateur', {'id': employer.id}) }}">Modifier<i class="icon-arrow-right14 position-right"></i></a>
                                    <button type="button" class="btn btn-danger legitRipple">Supprimer <i class="icon-trash-alt position-right"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

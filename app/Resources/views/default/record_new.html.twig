{% block javascripts %}
    <script>
        $(document).on('ready', function () {
            $('select#appbundle_record_type').on('select2:select', function () {
                var which_case = parseInt($(this).val());
                console.log(which_case);
                switch (which_case) {
                    case 2 :
                        $('div.dommage_aux_biens').removeClass('hidden');
                        $('div.flote').addClass('hidden');
                        break;
                    case 4:
                        $('div.flote').removeClass('hidden');
                        $('div.dommage_aux_biens').addClass('hidden');
                        break;
                    default :
                        $('div.flote').addClass('hidden');
                        $('div.dommage_aux_biens').addClass('hidden');
                        break;
                }
                ;
            });
        });
    </script>


{% extends 'base.html.twig' %}
{#{% form_theme edit_form 'Form/fields.html.twig' %}#}

{% block content %}
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Gestion des conducteurs<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
            <div class="heading-elements">
                <a href="{{ path('driver_index') }}" class="btn btn-primary btn-xs "><b><i class="icon-loop3"></i></b> Retour à la liste</a>
            </div>
        </div>

        <div class="panel-body">
            <p class="content-group-lg"></p>

            <form name="appbundle_user" method="post" class="form-horizontal">
                <div id="appbundle_user">
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_firstName">Nom</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_firstName" name="appbundle_user[firstName]" required="required" class="form-control" value="Adah" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_lastName">Prénom</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_lastName" name="appbundle_user[lastName]" required="required" class="form-control" value="Reichel" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_roless">Adresse</label>
                        <div class="col-lg-10">
                            <input  type="text" required maxlength="4" id="appbundle_user_roless" name="appbundle_user[roless]" class="form-control" value="Ring street 12" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_addressComplement">Adresse Complément</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_addressComplement" name="appbundle_user[addressComplement]" class="form-control"  value="Ring street 12, building D, flat #67" />
                        </div>
                    </div>
                    <div class="form-group"><label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_zipCode">Code postal</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_zipCode" name="appbundle_user[zipCode]" class="form-control" value="974934" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_city">Ville</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_city" name="appbundle_user[city]" required="required" class="form-control" value="Paris" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_phoneNumber">Numéro de téléphone</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_city" name="appbundle_user[city]" required="required" class="form-control" value="+99-99-9999-9999" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_password_first">Numéro de licence</label>
                        <div class="col-lg-10">
                            <input type="text" id="appbundle_user_city" name="appbundle_user[city]" required="required" class="form-control" value="2096" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_password_first">Documents numérisés</label>
                        <div class="col-lg-10">
                            <div class="input-group file-caption-main">
                                <div class="input-group-btn">
                                    <input type="file" class="file-input-advanced" multiple="multiple" id="15348562824">
                                </div>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="appbundle_user__token" name="appbundle_user[_token]" value="kiCkiLqcAbTrgyBCnyvXyhNm0CHHqrErjkmL3MgVsaU" />
                </div>
                <div class="text-right">
                    <div class="btn-group">
                        <button name="update" type="submit" class="btn btn-primary legitRipple">Mettre à jour<i class="icon-rotate-cw2 position-right"></i></button>
                        <button onclick="return confirm('Êtes-vous sûr ? Cette action est irréversible.');" name="delete" title="Supprimer cet utilisateur" type="submit" class="btn btn-danger legitRipple">Supprimer <i class="icon-trash-alt position-right"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

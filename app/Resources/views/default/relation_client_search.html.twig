                    </div>
                </div>

                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3">
                            <fieldset>
                                <div class="form-group">
                                    <legend class="text-semibold"><i class="icon-search4 position-left"></i> Chercher : </legend>
                                    <div class="col-lg-10">
                                        <input type="text" id="appbundle_user_addressComplement" name="appbundle_user[addressComplement]" class="form-control" />
                                    </div>
                                </div>
                            </fieldset>

                        </div>

                        <div class="col-md-3 col-lg-3">
                            <fieldset>
                                <div class="form-group">
                                    <legend class="text-semibold"><i class="icon-user position-left"></i> Chercher par nom du clinet : </legend>
                                    <div class="col-lg-10">
                                        <select id="appbundle_user_roless" name="appbundle_user[roless]" class="form-control">
                                            <option value="Jean">Jean</option>
                                            <option value="Adah">Adah</option>
                                            <option value="Maynard">Maynard</option>
                                        </select>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="col-md-3 col-lg-3">
                            <fieldset>
                                <div class="form-group">
                                    <legend class="text-semibold"><i class="icon-user-tie position-left"></i> Chercher par nom d'utilisateur : </legend>
                                    <div class="col-lg-10">
                                        <select id="appbundle_user_roless" name="appbundle_user[roless]" class="form-control">
                                            <option value="Wolff">Wolff</option>
                                            <option value="Schowalter">Schowalter</option>
                                            <option value="Reichel">Reichel</option>
                                        </select>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="col-md-3 col-lg-3">
                            <fieldset>
                                <div class="form-group">
                                    <legend class="text-semibold"><i class="icon-calendar22 position-left"></i> Chercher par date : </legend>
                                    <div class="input-group">
                                        <input type="text" class="form-control daterange-left" value="{{  "now"|date("d/m/y") }} - {{ "now"|date('d/m/y') }}">
                                        <span class="input-group-addon"></span>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>

                    <div class="text-right">
                        <button type="submit" class="btn btn-primary legitRipple">Recherchez <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </div>
            </div>
        </form>


        {# tab result #}
        <table class="table datatable-responsive table-bordered table-hover datatable-highlight">
            <thead>
            <tr>
                <th>#</th>

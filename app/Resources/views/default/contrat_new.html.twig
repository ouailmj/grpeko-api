{% extends 'base.html.twig' %}
{#{% form_theme edit_form 'Form/fields.html.twig' %}#}

{% block content %}
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Ajout de contrat<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
            <div class="heading-elements">
                <a href="#" class="btn btn-primary btn-xs "><b><i class="icon-loop3"></i></b> Retour à la fiche client</a>
            </div>
        </div>

        <div class="panel-body">
            <p class="content-group-lg"></p>

            <form name="appbundle_user" method="post" class="form-horizontal">
            <div id="appbundle_user">
                <div class="form-group">
                <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_firstName">Numéo de contrat</label>
                    <div class="col-lg-10">
                        <input type="text" id="appbundle_contract_number" name="appbundle_contract[number]" required="required" placeholder="" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group">
                <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_lastName">Type de contrat</label>
                    <div class="col-lg-10">
                        <select id="appbundle_contract_type" name="appbundle_contract[type]" class="form-control">
                            <option value="" disabled selected>Veuillez choisir le type de contrat</option>
                            <option  value="0 à 499k">Assurance IARD</option>
                            <option value="500k à 1">Assurance vie</option>
                            <option value="Plus de 1M">Assurance incendie</option>
                            <option value="Plus de 1M">Assurance accidents</option>
                            <option value="Plus de 1M">Assurance vol</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_lastName">Compagnie</label>
                    <div class="col-lg-10">
                        <select id="appbundle_contract_type" name="appbundle_contract[client]" class="form-control">
                            <option value="" disabled selected>Veuillez choisir une companie</option>
                            <option value="0 à 499k"></option>
                            <option value="500k à 1">REXEL France</option>
                            <option value="Plus de 1M">Paris CEDEX 10</option>
                            <option value="Plus de 1M">PSA AUTOMOBILES SA</option>
                            <option value="Plus de 1M">SANOFI WINTHROP INDUSTRIE</option>
                            <option value="Plus de 1M">TOTAL MARKETING FRANCE</option>
                            <option value="Plus de 1M">ITM ALIMENTAIRE INTERNATIONAL</option>
                            <option value="Plus de 1M">AUTOMOBILES PEUGEOT</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-2 text-semibold control-label required">Produit</label>
                    <div class="col-lg-10">
                        <select id="appbundle_contract_type" name="appbundle_contract[client]" class="form-control">
                            <option value="" disabled >Veuillez choisir un produit</option>
                            <optgroup label="Assurances Dommages aux biens (DAB)">
                                <option value="AL">Offre Hôpitaux</option>
                                <option value="IA">Offre collectivité</option>
                                <option value="KY">Offre bâtiments industriels multi risques</option>
                                <option value="IA">Offre multirisque Immeubles</option>
                                <option value="IA">Offre multirisque professionnelle</option>
                            </optgroup>
                            <optgroup label="Assurances Auto">
                                <option value="AL">Flotte de véhicules</option>
                                <option selected value="IA">Mono véhicules</option>
                                <option value="KY">Marchandise transportée</option>
                            </optgroup>
                            <optgroup label="RC HOSPITALIERE">
                                <option value="AL">RC COLLECTIVITE</option>
                                <option value="IA">RC ENTREPRISE</option>
                                <option value="KY">RC PRESTATAIRE DE SERVICE</option>
                                <option value="IA">RC PRO DU TRANSPORT et LOGISTIQUE</option>
                            </optgroup>
                            <optgroup label="Construction">
                                <option value="AL">TOUS RISQUES CHANTIER (TRC)</option>
                                <option value="IA">DECENNALE</option>
                                <option value="KY">DOMMAGE OUVRAGE</option>
                            </optgroup>
                            <optgroup label="Assurances Collective">
                                <option value="AL">SANTE COLLECTIVE</option>
                                <option value="IA">PREVOYANCE COLLECTIVE</option>
                                <option value="KY">EPARGNE SALARIALE COLLECTIVE</option>
                            </optgroup>
                            <optgroup label="Protection du dirigeant ( vie retraite prévoyance)">
                                <option value="AL">ASSURANCE VIE</option>
                                <option value="IA">PLAN EPARGNE RETRAITE POPULAIRE</option>
                                <option value="KY">CONTRAT MADELIN</option>
                                <option value="KY">PREVOYANCE</option>
                            </optgroup>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_lastName">Etat de contrat</label>
                    <div class="col-lg-10">
                        <select id="appbundle_contract_type" name="appbundle_contract[client]" class="form-control">
                            <option value="" disabled selected>Veuillez choisir un état</option>
                            <option value="0 à 499k"></option>
                            <option value="500k à 1">Initié</option>
                            <option value="500k à 1">En cours</option>
                            <option value="Plus de 1M">Instances</option>
                            <option value="Plus de 1M">Resilié</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-2 text-semibold control-label required" for="appbundle_user_roless">Date de début</label>
                    <div class="input-group col-lg-10">
                        <span class="input-group-addon"></span>
                        <input type="text" class="form-control french_picker" placeholder="" value="{{ "now"|date('d/m/Y') }}">
                    </div>
                </div>
                <div class="form-group">
                <label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_addressComplement">Date de fin</label>
                    <div class="input-group col-lg-10">
                        <span class="input-group-addon"></span>
                        <input type="text" class="form-control french_picker" placeholder="" value="">
                    </div>
                </div>
                <div class="form-group"><label class="control-label col-lg-2 text-semibold control-label" for="appbundle_user_zipCode">Notes</label>
                    <div class="col-lg-10">
                        <textarea type="text" id="appbundle_user_zipCode" name="appbundle_user[zipCode]" class="form-control" value=""></textarea>
                    </div>
                </div>
    </div>
            <div class="text-right">
                <div class="btn-group">
                    <button name="update" type="submit" class="btn btn-primary legitRipple">Enregistrer<i class="icon-folder-plus position-right"></i></button>
                    <button onclick="return confirm('Êtes-vous sûr ? Cette action est irréversible.');" name="delete" title="Supprimer cet utilisateur" type="submit" class="btn btn-danger legitRipple">Supprimer <i class="icon-trash-alt position-right"></i></button>
                </div>
            </div>

    </form>
        </div>
    </div>
{% endblock %}

                                        </tbody>
                                    </table>

                                </fieldset>

                            </div>
                        </div>


                        <div class="form-group">
                            <div class=" col-sm-12">

                                <fieldset class="scheduler-border">
                                    <legend class="scheduler-border" style="text-transform: capitalize"></legend>

                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            {{form_row(form.apeCode)}}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            {{form_row(form.mainActivity)}}
                                        </div>
                                    </div>   
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            {{form_row(form.siretNumber)}}

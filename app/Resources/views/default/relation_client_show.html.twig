{% block content %}
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Gestion des relation clients<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
            <div class="heading-elements">
                <a href="{{ path('relation_client_search') }}" class="btn btn-primary btn-xs "><b><i class="icon-loop3"></i></b> Retour à la liste</a>
            </div>
        </div>

        <div class="panel-body">
            <p class="content-group-lg"></p>
            <div class="col-md-2 col-lg-2"></div>
            <div class="col-md-8 col-lg-8">
                <table class="table table-bordered table-lg">
                    <tbody>

                    <tr>
                        <th>Nom client</th>
                        <td>Adah</td>
                    </tr>
                    <tr>
                        <th>Prénom client </th>
                        <td>Adah</td>
                    </tr>
                    <tr>
                        <th>Action</th>
                        <td>Reichel</td>
                    </tr>

                    <tr>
                        <th>Description</th>
                        <td>2017</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{ "now"|date("d/m/y") }}</td>
                    </tr>
                     <tr>
                        <th colspan="2">
                            <div class="text-right">
                                <div class="btn-group">
                                    <a href="{{ path('relation_client_edit') }}" class="btn btn-primary btn-labeled btn-xs legitRipple"><b><i class="icon-pencil"></i></b> Modifier</a>
                                   <a href="#" onclick="return confirm('Êtes-vous sûr ? Cette action est irréversible.');" type="button" class="btn btn-danger btn-labeled btn-xs legitRipple"><b><i class="icon-trash-alt"></i></b> Supprimer</a>
                                 </div>
                            </div>
                        </th>
                    </tr>

                    </tbody>
                </table>

            </div>
            <div class="col-md-2 col-lg-2"></div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block content %}
<style>
 
.alert.alert-styled-left {
    border-left-width: 27px !important;
}
.alert[class*=alert-styled-].alert-info:after, .alert[class*=alert-styled-][class*=bg-info]:after
{
content: none !important;
}

</style>
<div class="page-content">
    {% block sidebar %}
        {% include 'layout/_partials/sidebar.html.twig' %}
    {% endblock %}
    <div class="content-wrapper">
        <div class="content">
            <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h6 class="panel-title">Gestion des collaborateurs<a class="heading-elements-toggle"><i class="icon-more"></i></a><a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                                <li><a data-action="close"></a></li>
                            </ul>
                        </div>
                    </div>
                <div class="panel-body">
                        <p class="content-group-lg"></p>
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                    <fieldset>
                    <legend class="text-semibold"><i class="icon-address-book"></i> Informations générale</legend>
                            <div class="form-group">
                                <div class="col-lg-12">
                                        {{form_row(form.firstName)}}
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-lg-12">
                                        {{form_row(form.lastName)}}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.phoneNumber)}}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.phoneNumber)}}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.manager)}}
                                </div>
                            </div>

                            <div class="form-group">
                                    <div class="col-lg-12">
                                        {{form_row(form.jobPosition.name)}}
                                    </div>
                                </div>

                           </fieldset>
                           <fieldset>
                                <legend class="text-semibold"><i class="icon-lock4"></i> Informations de connexion</legend>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.userAccount.initials)}}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.userAccount.username)}}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.userAccount.email)}}
                                </div>
                            </div>
                        
                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.userAccount.password)}}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    {{form_row(form.status)}}
                                </div>
                            </div>
                            
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary legitRipple">Envoyer <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        </fieldset>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block content %}

<!-- RECORD_STEP modal -->

<div id="modal_step" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-teal-400">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h6 class="modal-title">Changement de statut</h6>
            </div>

            <div class="modal-body">
                <h6 class="text-semibold">Veuillez choisir le statut</h6>
                {{ form_start(form_editRecord_Step) }}
                {{ form_widget(form_editRecord_Step.recordStep) }}
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
                <input type="submit"  value="Changer" name="delete" title="Changer cet sinistre" class="btn bg-teal-400 legitRipple" />
                {{ form_end(form_editRecord_Step) }}
            </div>

        </div>
    </div>
</div>

{% endblock %}
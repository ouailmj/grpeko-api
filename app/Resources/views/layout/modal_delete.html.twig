{% block content %}

    <!-- Delete modal -->
    <div id="modal_delete" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h6 class="modal-title">Confirmation du suppression</h6>
                </div>

                <div class="modal-body">
                    <h6 class="text-semibold">Message</h6>
                    <p>Êtes-vous sûr ? Cette action est irréversible.</p>
                </div>

                <div class="modal-footer">
                    {{ form_start(delete_form) }}
                    <button type="button" class="btn btn-link" data-dismiss="modal">Fermer</button>
                    <input type="submit"  value="Supprimer" name="delete" title="Supprimer cet utilisateur" class="btn btn-danger legitRipple" />
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock  %}
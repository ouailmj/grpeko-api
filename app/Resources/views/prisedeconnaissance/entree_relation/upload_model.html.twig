{% extends 'prisedeconnaissance/prisedeconnaissance.html.twig' %}
{% block _content %}
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">FICHE PATRIMONIALE<a class="heading-elements-toggle"><i class="icon-more"></i></a></h5>
            <div class="heading-elements">
                <ul class="icons-list">
                    <li><a data-action="collapse"></a></li>
                    <li><a data-action="reload"></a></li>
                    <li><a data-action="close"></a></li>
                </ul>
            </div>
        </div>
        <div class="panel-body">


            <div class="tab-pane active" id="relation">
                <div>

                    <div class="row">
                        <div class="col-lg-9">
                            <h3 style="color: #626262;">&nbsp;&nbsp;Afin de preparer ce rdv, veuillez suivre les étapes décrites ci-dessous:</h3>
                        </div>
                        <div class="col-lg-3" style="padding-right: 20px;padding-top: 10px">
                            <span title="Ajouter un nouveau Rendez vous" class="pull-right"><a href="{{ asset('/downloads/fiche_patrimoniale.xlsx') }}" style="background-color: #5d9d9c; border-color: #5d9d9c;" class="btn btn-labeled btn-labeled-left bg-blue heading-btn legitRipple"><b><i class="icon-file-download"></i></b>Télécharger le modèle</a></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <ol style="font-size: 20px;margin-left: 30px">
                                <li>Télécharger la fiche patrimoniale à remplir en cliquant sur le bouton à droite.</li>
                                <li>Remplissez le modèle correctement.</li>
                                <li>Charger le fichier correctement rempli à l'aide du formulaire ci-dessous.</li>
                                <li>Soumettre le formulaire correctement rempli en cliquant sur le bouton <b>Exporter</b>.</li>
                            </ol>
                        </div>
                    </div>

                    <div>
                        {{ form_start(rendezvous, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="row" style="margin-left: 10px" >
                            <div class="col-lg-12">
                                {{ form_label(rendezvous.FichePatrimoniale,'CHARGER LE FICHIER EXCEL :',
                                    {'label_attr': {'style': 'width:100% !important;'}})
                                }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_widget(rendezvous.FichePatrimoniale,
                                    {'attr':{'style':"width: 50%;padding: 6px 12px;font-size: 14px;line-height: 1.42857143;color: #555;background-color: #fff;border: 1px solid #ccc;border-radius: 4px;"}
                                    }) }}
                                <div class="form-group has-warning">
                                    {{ form_errors(rendezvous.FichePatrimoniale) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                {{ form_label(rendezvous.Cin,'CHARGER LA PIECE IDENTITÈ',
                                    {'label_attr': {'style': 'width:100% !important;'}})
                                }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_widget(rendezvous.Cin,
                                    {'attr':{'style':"width: 50%;padding: 6px 12px;font-size: 14px;line-height: 1.42857143;color: #555;background-color: #fff;border: 1px solid #ccc;border-radius: 4px;"}
                                    }) }}
                                <div class="form-group has-warning">
                                    {{ form_errors(rendezvous.Cin) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                {{ form_row(rendezvous.Exporter,{'attr':{
                                    'style':'background-color:#5d9d9c !important;'
                                }}) }}
                            </div>
                        </div>
                        {{ form_end(rendezvous)}}
                    </div>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
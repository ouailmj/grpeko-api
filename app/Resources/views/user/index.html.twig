{% extends 'base.html.twig' %}

{% block content %}

    <!-- Highlighting rows and columns -->
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h5 class="panel-title">Liste des utilisateurs</h5>
        </div>

        <div class="panel-body">
            <span title="Ajouter un nouvel utilisateur" class="pull-right"><a href="{{ path('user_new') }}" class="btn btn-labeled btn-labeled-left bg-blue heading-btn"><b><i class="icon-user-plus"></i></b> Ajouter</a></span>
        </div>

        <table class="table datatable-responsive table-bordered table-hover datatable-highlight">
            <thead>
            <tr>
                <th>#</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Rôles</th>
                <th>Statut</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in users %}
            <tr>
                <td><a href="{{ path('user_show', {'id': item.id }) }}">{{ item.id }}</a></td>
                <td>{{ item.firstName|default('') }}</td>
                <td>{{ item.lastName|default('') }}</td>
                <td>{{ item.email|default('') }}</td>
                <td>{{ item.phoneNumber|default('') }}</td>
                <td>
                    {% for role in item.tableRoles %}
                        <span class="label label-info"> {{ role }} </span>
                    {% endfor %}
                </td>
                <td>
                    {% if item.enabled %}
                        <span class="label label-success">Activé</span>
                    {% else %}
                        <span class="label label-danger">Désactivé</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <div class="">
                        <a title="Afficher les détails" href="{{ path('user_show', {'id': item.id}) }}" class="text-primary legitRipple"><i class="icon-eye position-left"></i></a>
                        <a title="Modifier" href="{{ path('user_edit', {'id': item.id}) }}" class="text-primary legitRipple"><i class="icon-pen position-left"></i></a>
                    </div>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /highlighting rows and columns -->

{% endblock %}


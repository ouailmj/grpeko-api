{% extends 'base.html.twig' %}
{% form_theme edit_form 'Form/fields.html.twig' %}

{% block content %}
    <div class="panel panel-flat">
        <div class="panel-heading">
            <h6 class="panel-title">Gestion des utilisateurs<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
        </div>

        <div class="panel-body">
            <p class="content-group-lg"></p>

            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(edit_form) }}
            <div class="text-right">
                <div class="btn-group">
                    <button name="update" type="submit" class="btn btn-primary legitRipple">Modifier <i class="icon-arrow-right14 position-right"></i></button>
                    <button type="button" class="btn btn-danger legitRipple" data-toggle="modal" data-target="#modal_delete" title="Supprimer cet utilisateur">Supprimer <i class="icon-trash-alt position-right"></i></button>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>


    {% include 'layout/modal_delete.html.twig' %}
{% endblock %}
